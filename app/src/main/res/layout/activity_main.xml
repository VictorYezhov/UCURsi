<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".main.MainActivity">

    <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/main_nav_graph" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="43dp"
            android:id="@+id/guideline2"/>


    <FrameLayout
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#e65245"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2"/>

    <ImageView
            android:id="@+id/homeImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_home_icon"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toTopOf="@+id/view2" android:layout_marginTop="6dp"/>

    <ImageView
            android:id="@+id/infoImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_info_icon"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/homeImageView" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/accountImageView" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/view2" android:layout_marginTop="6dp"/>

    <ImageView
            android:id="@+id/accountImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_account_icon"
            app:layout_constraintBottom_toBottomOf="@+id/view2" app:layout_constraintEnd_toEndOf="@+id/view2"
            android:layout_marginEnd="50dp" app:layout_constraintTop_toTopOf="@+id/view2"
            android:layout_marginTop="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>